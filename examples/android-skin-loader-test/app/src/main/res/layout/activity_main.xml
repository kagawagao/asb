<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Android Skin Loader Test"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/skin_path_label"
        android:textSize="14sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/skinPathText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="/sdcard/Download/com.example.skin.skin"
        android:textSize="12sp"
        android:textColor="#FF666666"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/loadSkinButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/load_skin"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/resetSkinButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reset_skin"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/status_default"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/resource_id_label"
        android:textSize="14sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/resourceIdText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not loaded"
        android:textSize="12sp"
        android:textColor="#FF666666"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/color_preview"
        android:textSize="14sp"
        android:layout_marginTop="8dp" />

    <View
        android:id="@+id/colorPreview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/default_primary"
        android:layout_marginTop="8dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/logText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log:\n"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:padding="8dp"
            android:background="#FFF5F5F5" />
    </ScrollView>

</LinearLayout>
